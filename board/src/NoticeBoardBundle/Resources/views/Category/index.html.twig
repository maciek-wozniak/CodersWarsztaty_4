{% extends 'NoticeBoardBundle::main.html.twig' %}

{% block body -%}
    <h3>Lista kategorii:</h3>

    {% for category in categories %}

        <div class="well">
        {{ category.name }}
            <a class="btn btn-success btn-xs" href="{{ path('admin_category_edit', { 'id': category.id }) }}">Edytuj</a>
            </div>

    {% endfor %}

    <a href="{{ path('admin_category_new') }}">
        Dodaj nową kategorię
    </a>

{% endblock %}
